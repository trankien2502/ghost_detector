                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:background="@drawable/img_background_button_ghost"/>
                        <ImageView
                            android:id="@+id/icGhostType"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:layout_constraintTop_toTopOf="@id/vGhostType"
                            app:layout_constraintStart_toStartOf="@id/vGhostType"
                            app:layout_constraintEnd_toEndOf="@id/vGhostType"
                            app:layout_constraintBottom_toTopOf="@id/tvGhostType"
