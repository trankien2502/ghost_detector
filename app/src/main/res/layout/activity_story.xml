<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context="com.ghostdetctor.ghost_detector.ui.ghost.story.StoryActivity">
    <include
        android:id="@+id/header"
        layout="@layout/layout_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/storyTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="4dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/svn_gilroy"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/storyContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:paddingHorizontal="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/svn_gilroy"
                android:lineSpacingExtra="8sp"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/storyTeller"
                android:gravity="end"
                android:text="@string/haunted_teller_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp"
                android:textColor="@color/white"
                android:fontFamily="@font/svn_gilroy"
                android:lineSpacingExtra="8sp"
                android:textStyle="italic"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/storyFooter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="true"
                android:textColor="@color/white"
                android:fontFamily="@font/svn_gilroy"
                android:lineSpacingExtra="5sp"
                android:text="@string/horror_footer_1"
                android:layout_marginStart="50dp"
                android:textStyle="italic"
                android:gravity="end"
                android:textSize="12sp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>