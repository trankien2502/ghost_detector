<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background_challenge"
    tools:context="com.ghostdetctor.ghost_detector.ui.challenge.ChallengePortraitActivity">
    <ImageView
        android:id="@+id/ivBackChallenge"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/img_challenge_back"/>
    <LinearLayout
        android:layout_width="152dp"
        android:orientation="horizontal"
        android:layout_height="40dp"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp">
        <ImageView
            android:id="@+id/ivStoryChallenge"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/img_challenge_story"/>
        <ImageView
            android:id="@+id/ivScreenChallenge"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="visible"
            android:layout_marginHorizontal="8dp"
            android:src="@drawable/img_challenge_landscape"/>
        <ImageView
            android:id="@+id/ivSoundChallenge"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/img_challenge_sound_on"/>

    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivBackChallenge"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="144dp"
                app:layout_constraintDimensionRatio="328:230"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_challenge_paper"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="328:34"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view"
                        app:layout_constraintDimensionRatio="328:181"
                        android:src="@drawable/img_vector_portrait"/>
                    <View
                        android:id="@+id/view1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="42:230"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/img_vector_landscape"
                        app:layout_constraintBottom_toBottomOf="@id/image1"
                        app:layout_constraintDimensionRatio="254:181"
                        app:layout_constraintStart_toEndOf="@id/view1"
                        app:layout_constraintTop_toBottomOf="@id/view" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="71:230"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/ivPencilLandscape"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="196:30"
                        android:src="@drawable/img_pencil"
                        app:layout_constraintBottom_toBottomOf="@id/image1"
                        app:layout_constraintEnd_toStartOf="@+id/view2"
                        app:layout_constraintStart_toEndOf="@+id/view3"
                        app:layout_constraintTop_toTopOf="@id/image1" />
                    <View
                        android:id="@+id/view2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="61:230"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view4"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="328:27"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ghochi_hand"
                        android:text="@string/yes"
                        android:textSize="36sp"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toStartOf="@id/ivPencilPortrait"
                        app:layout_constraintBottom_toTopOf="@id/ivPencilLandscape"
                        android:layout_marginEnd="18dp"
                        android:layout_marginBottom="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ghochi_hand"
                        android:text="@string/yes"
                        android:textSize="36sp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toEndOf="@id/ivPencilPortrait"
                        app:layout_constraintTop_toBottomOf="@id/ivPencilLandscape"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ghochi_hand"
                        android:text="@string/no"
                        android:textSize="36sp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toEndOf="@id/ivPencilPortrait"
                        app:layout_constraintBottom_toTopOf="@id/ivPencilLandscape"
                        android:layout_marginStart="18dp"
                        android:layout_marginBottom="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ghochi_hand"
                        android:text="@string/no"
                        android:textSize="36sp"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toStartOf="@id/ivPencilPortrait"
                        app:layout_constraintTop_toBottomOf="@id/ivPencilLandscape"
                        android:layout_marginEnd="18dp"
                        android:layout_marginTop="15dp"/>


                    <ImageView
                        android:id="@+id/ivPencilPortrait"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/img_pencil_portrait"
                        app:layout_constraintBottom_toTopOf="@id/view5"
                        app:layout_constraintDimensionRatio="30:196"
                        app:layout_constraintEnd_toEndOf="@id/image1"
                        app:layout_constraintStart_toStartOf="@id/image1"
                        app:layout_constraintTop_toBottomOf="@+id/view4" />
                    <View
                        android:id="@+id/view5"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="328:7"/>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clTalk"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="42dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                <ImageView
                    android:id="@+id/ivTalk"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/img_challenge_talk"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/bowlby_one_sc"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/talk"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    app:layout_constraintEnd_toEndOf="@id/ivTalk"
                    app:layout_constraintStart_toStartOf="@id/ivTalk"
                    app:layout_constraintTop_toTopOf="@id/ivTalk" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clStop"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:visibility="gone"
                android:layout_marginTop="42dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                <ImageView
                    android:id="@+id/ivStop"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/img_challenge_stop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/bowlby_one_sc"
                    android:gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:lineSpacingExtra="-15sp"
                    android:maxLines="3"
                    android:text="@string/stop_and_ask"
                    android:textColor="@color/gray"
                    android:textSize="28sp"
                    app:layout_constraintBottom_toBottomOf="@+id/ivStop"
                    app:layout_constraintEnd_toEndOf="@id/ivStop"
                    app:layout_constraintStart_toStartOf="@id/ivStop"
                    app:layout_constraintTop_toTopOf="@id/ivStop" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginBottom="70dp"
                android:layout_marginTop="204dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                <ImageView
                    android:id="@+id/ivReset"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_challenge_restt"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/bowlby_one_sc"
                    android:gravity="center"
                    android:lineSpacingExtra="-10sp"
                    android:maxLines="2"
                    android:text="Reset"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/ivReset"
                    app:layout_constraintEnd_toEndOf="@id/ivReset"
                    app:layout_constraintStart_toStartOf="@id/ivReset"
                    app:layout_constraintTop_toTopOf="@id/ivReset" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>






</androidx.constraintlayout.widget.ConstraintLayout>