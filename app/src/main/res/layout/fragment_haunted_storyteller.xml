                    app:layout_constraintEnd_toEndOf="@id/tvSeeMore1"
                    app:layout_constraintStart_toStartOf="@id/tvSeeMore1"
                    app:layout_constraintTop_toTopOf="@id/tvSeeMore1" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

