                        <TextView
                            android:id="@+id/tvGhostType"
                            android:layout_width="match_parent"
                            android:maxLines="2"
                            android:lines="2"
                            android:ellipsize="end"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="@id/vGhostType"
                            app:layout_constraintStart_toStartOf="@id/vGhostType"
                            app:layout_constraintEnd_toEndOf="@id/vGhostType"
                            app:layout_constraintTop_toBottomOf="@id/icGhostType"
