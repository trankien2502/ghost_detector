                            android:fontFamily="@font/svn_gilroy"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:gravity="center"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:id="@+id/clCollection"
                       android:layout_width="104dp"
                       android:layout_height="match_parent"
                       app:layout_constraintEnd_toStartOf="@id/clScaryStory"
                       app:layout_constraintStart_toEndOf="@id/clGhostType">
                       <View
                           android:id="@+id/vCollection"
                           android:layout_width="104dp"
                           android:layout_height="match_parent"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintTop_toTopOf="parent"
                           android:background="@drawable/img_background_button_ghost"/>
                       <ImageView
                           android:id="@+id/icCollection"
                           android:layout_width="32dp"
                           android:layout_height="32dp"
                           app:layout_constraintTop_toTopOf="@id/vCollection"
                           app:layout_constraintStart_toStartOf="@id/vCollection"
                           app:layout_constraintEnd_toEndOf="@id/vCollection"
                           app:layout_constraintBottom_toTopOf="@id/tvCollection"
                           android:src="@drawable/img_ghost_collection"/>
                       <TextView
                           android:id="@+id/tvCollection"
                           android:layout_width="match_parent"
                           android:maxLines="2"
                           android:lines="2"
                           android:ellipsize="end"
                           android:layout_height="wrap_content"
                           app:layout_constraintBottom_toBottomOf="@id/vCollection"
                           app:layout_constraintStart_toStartOf="@id/vCollection"
                           app:layout_constraintEnd_toEndOf="@id/vCollection"
                           app:layout_constraintTop_toBottomOf="@id/icCollection"
                           android:text="@string/collection"
                           android:fontFamily="@font/svn_gilroy"
                           android:textSize="14sp"
                           android:textColor="@color/white"
                           android:gravity="center"/>
                   </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clScaryStory"
